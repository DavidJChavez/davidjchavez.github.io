---
const { title, company, period } = Astro.props;
---

<article class="timeline-item">
    <div class="dot"></div>
    <div class="details">
        <h3>{ title }</h3>
        <p class="subtitle">{ company } â€“ { period }</p>
        <p>
            <slot />
        </p>
    </div>
</article>

<style>
    .timeline-item {
        position: relative;
        margin-bottom: 2rem;
    }

    .dot {
        position: absolute;
        left: -2.43rem;
        top: 0.6rem;
        width: 0.75rem;
        height: 0.75rem;
        background-color: var(--border-color);
        border-radius: 50%;
    }

    .details {
        padding: 1rem;
        background-color: var(--background-color);
        border: 1px solid #ccc;
    }

    .details h3 {
        margin: 0 0 0.25rem;
    }

    .details .subtitle {
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }

    .details p {
        margin: 0.25rem 0;
        line-height: 1.5;
    }
</style>
